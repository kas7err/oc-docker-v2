FROM php:7.4-apache

# Install required PHP extensions for OpenCart
RUN apt-get update && apt-get install -y \
    libzip-dev \
    libonig-dev \
    libpng-dev \
    libjpeg-dev \
    libwebp-dev \
    libfreetype6-dev \
    libcurl4-openssl-dev \
    libxml2-dev \
    zlib1g-dev \
    libicu-dev \
    zip \
    unzip \
    git \
    && rm -rf /var/lib/apt/lists/*

# For PHP 7.4, 'dom' is often a separate install, not always bundled by default.
# Also, opcache is good to include.
RUN docker-php-ext-install pdo_mysql mysqli curl mbstring dom zip intl soap opcache

RUN docker-php-ext-configure gd --with-jpeg && \
    docker-php-ext-install gd

# Enable Apache modules (mod_rewrite is essential for OpenCart's SEO URLs)
RUN a2enmod rewrite

# Copy custom Apache virtual host config
COPY httpd-opencart.conf /etc/apache2/sites-available/000-default.conf

# Copy entrypoint script and make it executable
COPY entrypoint.sh /usr/local/bin/entrypoint.sh
RUN chmod +x /usr/local/bin/entrypoint.sh

# Set the entrypoint to our custom script
ENTRYPOINT ["/usr/local/bin/entrypoint.sh"]
CMD ["apache2-foreground"] # This is the original CMD for php-apache images
